# Create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@"
}

# Determine size of a file or total size of a directory
function fs() {
	if du -b /dev/null > /dev/null 2>&1; then
		local arg=-sbh;
	else
		local arg=-sh;
	fi
	if [[ -n "$@" ]]; then
		du $arg -- "$@";
	else
		du $arg .[^.]* ./*;
	fi;
}

# `c` with no arguments opens the current directory in Vs Code, otherwise
# opens the given location
function c() {
	if [ $# -eq 0 ]; then
		code .;
	else
		code "$@";
	fi;
}

# `v` with no arguments opens the current directory in Vim, otherwise opens the
# given location
function v() {
	if [ $# -eq 0 ]; then
		vim .;
	else
		vim "$@";
	fi;
}

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

# push a new branch to remote
function pushnew() {
  BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
  git push --set-upstream origin "$BRANCH_NAME"
}

# remove a vim plugin installed with pathogen
function rmvplug () {
  git submodule deinit -f -- "$@"
  rm -rf .git/modules/"$@"
  git rm -f "$@"
}

function addplug () {
  cdd # go to dotfiles directory

  gitRepo="https://github.com/$1"  # e.g: scrooloose/nerdtree.git
  pluginPath="vim/bundle/$2"       # e.g: nerdtree

  git submodule add "$gitRepo" "$pluginPath"
}
