# Sourced by zshrc

alias :q='exit'

# ----------------------------------------------------------------------------
# paths and dirs
# ----------------------------------------------------------------------------

alias tree='tree -CFI "node_modules"'       #ignore nodemodules directory
alias cdd='cd ~/dotfiles'
alias sites='cd ~/Sites'
alias blog='cd ~/Sites/roadtoseniordev.com'
alias ll='ls -al'
alias ld="ls -ld */"
alias l='ls'
alias lh='ls -Alh'
# Go to the root of a project (git root)
alias root='
  DIR="$(git rev-parse --show-cdup)"
  if [ "$DIR" != "" ] ; then
    cd "$DIR"
  fi
'

# ----------------------------------------------------------------------------
# editors
# ----------------------------------------------------------------------------

alias e='$EDITOR'
alias evr='e ~/dotfiles/vimrc'
alias ezr='e ~/dotfiles/zshrc'
alias szr='source ~/.zshrc'

# ----------------------------------------------------------------------------
# git
# ----------------------------------------------------------------------------

alias g='git'
alias gc='g commit'
alias gs='g status'
alias ga='g add .'
alias gp='g push'
alias gpn='pushnew' #see './functions'

# ----------------------------------------------------------------------------
# node
# ----------------------------------------------------------------------------

alias nvm='n'
alias n='npm'
alias ni='n install'
alias ns='n start'
alias nls='n list --depth=0'
alias nlsg='nls -g'
alias y='yarn'
alias yi='yarn install'
alias yr='yarn run'


# ----------------------------------------------------------------------------
# others
# ----------------------------------------------------------------------------
alias crap='create-react-app'
